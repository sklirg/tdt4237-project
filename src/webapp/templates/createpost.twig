{% extends 'base.twig' %}

{% block content %}

    <h2>Create post</h2>

    <form action="" method="POST">
        <input type="text" name="csrf_token" value="{{ csrf_token }}" hidden="true">
        <div id="flasherror">{{ flash.error }}</div>

        <label>Title:</label>
        <input type="text" name="title"> <br />

        <label>Text:</label>
        <textarea cols="40" rows="10" name="content"> </textarea><br />

        <label>Author:</label>
        <label>{{ username }}</label> <br />
        <input type="submit" name="submit" value="Create post">
    </form>
{% endblock %}
